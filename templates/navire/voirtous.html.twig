{% block title %} Tous les navires{% endblock %}
{% block body %}
  <div class="container" style="padding-top:10px;">
    <table class="table table-striped table-dark">
      <thead class="thead-dark">
        <tr>
          <th> IMO</th>
          <th> MMSI </th>
          <th> Nom du navire </th>
          <th> Indicatif navire </th>
