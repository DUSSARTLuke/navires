          <td>{{ navire.tiranteau}}</td>
          <td>{{ navire.letype.libelle }}</td>
          <td>{{ navire.eta|date('d-m-Y h:i') }}</td>
          {# <td> <a href=" {{ path('aisshipnavire_portscompatibles', {id:navire.id}) }}"> Ports Compatibles</a></td> #}
