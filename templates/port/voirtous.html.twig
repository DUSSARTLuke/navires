{# empty Twig template #}
{% extends 'base.html.twig' %}

{% block title %} Ports{% endblock %}
{% block body %}
  {% if type %}
    <div style="text-align: center;">
      <h3> Ports Compatibles </h3>
      <h4> Type de navire : {{ type.id }} - {{ type.libelle }} </h4>
    </div>
  {% else %}
    <div style="text-align: center;">
      <h3> Liste de tout les ports </h3>
    </div>
  {% endif %}
  <div class="container" style="padding-top:10px;">
    <table class="table table-striped table-dark">
      <thead class="thead-dark">
        <tr>
          <th> Indicatif</th>
          <th> Nom </th>
          <th> Pays </th>
        </tr>
      </thead>
      {% for port in ports %}
        <tr>
          <td>{{ port.indicatif}}</td>
          <td><a href=" {{ path('port_detail', {id:port.id}) }}">{{ port.nom }}</a></td>
          <td><a href=" {{ path('pays_detail', {id:port.lePays.id}) }}">{{ port.lePays.nom }}</td>
        </tr>
      {% endfor %}
    </table>
  </div>
{% endblock %}